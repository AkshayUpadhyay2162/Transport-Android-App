<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    tools:context=".MainActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="250dp"
        android:layout_gravity="center_horizontal"
        app:lottie_fileName="truck.json"
        app:lottie_loop="true"
        android:layout_marginTop="40dp"
        app:lottie_autoPlay="true"
        android:layout_height="250dp"></com.airbnb.lottie.LottieAnimationView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
    <Button
        android:id="@+id/transporter"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Transporter"
        android:background="@drawable/btn_round"
        android:onClick="TransportLogin"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <Button
        android:id="@+id/shopkeeper"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:text="Shopkeeper"
        android:background="@drawable/btn_round"
        android:onClick="shopkeeperLogin"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    </LinearLayout>
</LinearLayout>